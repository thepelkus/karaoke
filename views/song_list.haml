.chunking_container
  .song_search_container
    Search
    %input#search{name: "search", placeholder: "Type to filter song list", type: "text", data: {toggle: "searchresults", list: ".song-list"} }
  .song_alphabet_container
    Browse by "artist" letter
    %select#letter_picker
      %option -
      - ('a'..'z').each do |letter|
        %option #{letter}
%ul.song-list
  - songs.each_with_index do |song, index|
    %li.catalog_entry
      %a(href="/song/#{song["id"]}/play")
        .artist #{song["artist"]}
        .title #{song["title"]}
